<!--pages/first/first.wxml-->
<view>
    <view class="flex-container">
        <view class="UserHeadImage">
            <image src="../image/touxiang.jpg"></image>
        </view>
        <view class="UserName">
            <view class="user-name" catchtap="changeMoney">{{motto}}</view>
            <view class="PersonalitySignature">
                <view class="PersonalitySignature" class='boldone'>认证:</view>滁州学院材料与化学工程学院20级在校生
            </view>
        </view>
        <view class="money">{{balance}}</view>
    </view>

    <view class="State">
        <view class="Sta">
            <navigator class="Sta" hover-class="none" url="/pages/my/two/a">
                <image src="/pages/image/a.png"></image>
                <view class="Center">转让</view>
            </navigator>
        </view>
        <view class="Sta">
            <navigator class="Sta" hover-class="none" url="/pages/my/two/b">
                <image src="/pages/image/b.png"></image>
                <view class="Center">求购</view>
            </navigator>
        </view>
        <view class="Sta">
            <navigator class="Sta" hover-class="none" url="/pages/my/two/c">
                <image src="/pages/image/c.png"></image>
                <view class="Center">收藏</view>
            </navigator>
        </view>
        <view class="Sta">
            <navigator class="Sta" hover-class="none" url="/pages/my/two/d">
                <image src="/pages/image/d.png"></image>
                <view class="Center">足迹</view>
            </navigator>
        </view>
    </view>

    <van-cell-group inset>
        <van-cell title="  我的信息" is-link icon="comment" url="/pages/my/one/xinxi" size="large" />
        <van-cell title="  我的订阅" is-link icon="gem" url="/pages/my/one/dingyue" size="large" />
        <van-cell title="  积分明细" is-link icon="medal" url="/pages/my/one/jifen" size="large" />
        <van-cell title="  使用帮助" is-link icon="question" url="/pages/my/one/help" size="large" />
        <!-- <van-cell title="  意见反馈" is-link icon="comment-circle" url="/pages/my/one/yijian" size="large" /> -->
        <van-cell title="  账号设置" is-link icon="wap-home" url="/pages/my/one/zhanghao" size="large" />
    </van-cell-group>
</view>